{
  "info": {
    "name": "Chat App Backend APIs",
    "description": "Postman collection for Chat Application Backend (Auth, Users, Chats, Messages)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6000/api" },
    { "key": "token", "value": "" },
    { "key": "chatId", "value": "" },
    { "key": "messageId", "value": "" },
    { "key": "userId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth APIs",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Supriya\",\n  \"email\": \"supriya@test.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"supriya@test.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"<REFRESH_TOKEN_HERE>\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Get Logged-in User",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "User APIs",
      "item": [
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/users?search=supriya",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [{ "key": "search", "value": "supriya" }]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat APIs",
      "item": [
        {
          "name": "Create Chat",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"isGroupChat\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chats",
              "host": ["{{baseUrl}}"],
              "path": ["chats"]
            }
          }
        },
        {
          "name": "Get My Chats",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/chats",
              "host": ["{{baseUrl}}"],
              "path": ["chats"]
            }
          }
        },
        {
          "name": "Get Chat Details",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/chats/{{chatId}}",
              "host": ["{{baseUrl}}"],
              "path": ["chats", "{{chatId}}"]
            }
          }
        },
        {
          "name": "Mark Messages Read",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/chats/{{chatId}}/read",
              "host": ["{{baseUrl}}"],
              "path": ["chats", "{{chatId}}", "read"]
            }
          }
        }
      ]
    },
    {
      "name": "Message APIs",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chatId\": \"{{chatId}}\",\n  \"content\": \"Hello from Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "Get Messages (Pagination)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/messages/{{chatId}}?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{chatId}}"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Delete Message",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/messages/{{messageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{messageId}}"]
            }
          }
        }
      ]
    }
  ]
}
